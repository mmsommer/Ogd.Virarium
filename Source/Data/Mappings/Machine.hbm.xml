<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
    <class name="Ogd.Virarium.Domain.Models.Machine, Ogd.Virarium.Domain"
           table="Machines">
        <id name="Id">
            <column name="Id"
                    sql-type="int"
                    not-null="true" />
            <generator class="identity" />
        </id>
        <property name="Name" />
        <property name="MachineType" />
        <set name="Infections"
             table="Infections" >
            <key column="MachineId" />
            <one-to-many class="Ogd.Virarium.Domain.Models.Infection"
                         column="Id" />
        </set>
    </class>
</hibernate-mapping>